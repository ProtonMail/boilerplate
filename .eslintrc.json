{
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "react",
        "react-hooks"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "no-console": "off",
        "react/display-name": "off",
        "react/prop-types": "warn",
        "react-hooks/rules-of-hooks": "error",
        "import/no-unresolved": [2, {"commonjs": true, "amd": true}]
    }
}
